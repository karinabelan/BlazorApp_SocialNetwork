@inject Account.Password currentPassword
<div class="top-row pl-4">
    <a class="navbar-brand" href="">Menu</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="post">
                <span class="oi oi-box" aria-hidden="true"></span> Show post
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="blogers">
                <span class="oi oi-person" aria-hidden="true"></span> Bloggers
            </NavLink>
        </li>


        <li class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="oi oi-fullscreen-exit" aria-hidden="true"></span> Registrate
            </NavLink>
        </li>

        @if (currentPassword.PasswordInputed == passwordTemp)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="adminwork">
                    <span class="oi oi-people" aria-hidden="true"></span> User DB
                </NavLink>
            </li>
        }

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    string passwordTemp = "12345";

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
